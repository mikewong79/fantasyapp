<%= form_for [@league, @team] do |f| %>
  <%= f.hidden_field :owner, value: current_owner.id %><br/>
  <%= f.hidden_field :league, value: @league.id %><br/>
  Name: <%= f.text_field :name %><br />
  <%= f.submit %>
<% end %>

<%= link_to "Nevermind, I don't want to join this league", league_path(@league.id) %>