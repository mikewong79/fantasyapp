
<%= form_for [@league, @comment] do |f| %>
  <%= f.hidden_field :league_id, value: @league.id %>
  <%= f.hidden_field :name, value: current_owner.first_name + ' ' + current_owner.last_name%>
  <p>
    <%= f.label :message %><br />
    <%= f.text_area :message %>
  </p>

  <p>
    <%= f.submit "Post Comment" %>
  </p>
<% end %>